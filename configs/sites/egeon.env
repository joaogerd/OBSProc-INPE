# Perfil de ambiente para EGEON (INPE)
# Carrega módulos e ajusta variáveis para execução do OBSProc no cluster EGEON.

# Caminho para o OBSProc oficial
export OBSPROC_HOME="/caminho/para/obsproc"

# Diretórios de trabalho e saída
export WRK_BASE="/scratch/${USER}/obsproc_wrk"
export OUT_BASE="/scratch/${USER}/obsproc_out"

# Carregar módulos necessários
module purge
module load bufr_dump prepobs
# Ajustar conforme módulos do EGEON
module load gcc/10.2.0 openmpi/4.1.1

# Filas e recursos padrão
export SLURM_PARTITION="PESQ1"
export SLURM_CPUS_PER_TASK=8
