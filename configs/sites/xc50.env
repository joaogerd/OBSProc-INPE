# Perfil de ambiente para XC50
# Carrega módulos e ajusta variáveis para execução do OBSProc no Cray XC50.

# Caminho para o OBSProc oficial
export OBSPROC_HOME="/caminho/para/obsproc"

# Diretórios de trabalho e saída
export WRK_BASE="/lustre/${USER}/obsproc_wrk"
export OUT_BASE="/lustre/${USER}/obsproc_out"

# Carregar módulos necessários
module purge
module load bufr_dump prepobs
# Ajustar conforme módulos disponíveis no XC50
module load PrgEnv-gnu

# Filas e recursos padrão
export PBS_QUEUE="normal"
export PBS_NCPUS=8
